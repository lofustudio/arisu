{
  "name": "cookie",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "lofustudio/cookie",
  "author": "tygerxqt <hello@tygr.dev>",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"npm run build:web\" \"npm run build:bot\"",
    "build:web": "yarn run generate:css --minify && remix build",
    "build:bot": "tsc -p ./src",
    "dev": "tsnd --respawn --transpile-only --poll ./src/index.ts",
    "start": "node ./build/index.js",
    "generate:css": "npx tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css"
  },
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "@remix-run/express": "^1.6.1",
    "@remix-run/node": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@remix-run/serve": "^1.6.1",
    "axios": "^0.27.2",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "concurrently": "^7.2.2",
    "discord.js": "^13.8.0",
    "dotenv": "^16.0.1",
    "enquirer": "^2.3.6",
    "express": "^4.18.1",
    "forever": "^4.0.3",
    "forever-monitor": "^3.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "postcss": "^8.4.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/forever-monitor": "^1.7.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.1",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
